@model Lesson._2.Models.ProductUpdateViewModel

<html>
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>

<body>
    <section style="display: flex; flex-direction: column; justify-content: center; align-items: center; height: 100vh;">
        <form asp-action="Update" asp-controller="Product" method="post">
            <input type="hidden" asp-for="Product.Id" />

            <div class="form-group">
                <label asp-for="Product.Name"></label>
                <input asp-for="Product.Name" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Product.Description"></label>
                <input asp-for="Product.Description" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Product.Price"></label>
                <input asp-for="Product.Price" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Product.Discount"></label>
                <input asp-for="Product.Discount" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Product.ImageLink"></label>
                <input asp-for="Product.ImageLink" class="form-control" />
            </div>

            <a href="@Url.Action("UpdateProduct", "Product", new { id=Model.Product.Id })" class="btn btn-primary">Update Product</a>
        </form>
    </section>
</body>
</html>